<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GUIController">
   <children>
      <TextField fx:id="myStudentFirstName" layoutX="59.0" layoutY="128.0" promptText="First name" />
      <TextField fx:id="myStudentLastName" layoutX="59.0" layoutY="176.0" promptText="Last name " />
      <TextField fx:id="myStudentId" layoutX="59.0" layoutY="221.0" promptText="Student ID" />
      <TextField fx:id="totalCredits" layoutX="59.0" layoutY="267.0" promptText="Total credits" />
      <Button layoutX="300.0" layoutY="128.0" mnemonicParsing="false" onAction="#registerStudent" prefHeight="48.0" prefWidth="164.0" text="Register student to course" />
      <TextField fx:id="courseId" layoutX="59.0" layoutY="316.0" promptText="Course ID" />
      <Button layoutX="299.0" layoutY="56.0" mnemonicParsing="false" onAction="#saveStudent" prefHeight="47.0" prefWidth="164.0" text="Save student to database" />
      <Button layoutX="300.0" layoutY="200.0" mnemonicParsing="false" onAction="#showCredits" prefHeight="48.0" prefWidth="164.0" text="Show total credits of student" />
      <Label fx:id="studentLabel" layoutX="402.0" layoutY="281.0" prefHeight="48.0" prefWidth="164.0" text="Label" />
      <Label layoutX="302.0" layoutY="281.0" prefHeight="48.0" prefWidth="83.0" text="No of credits">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Button layoutX="59.0" layoutY="55.0" mnemonicParsing="false" onAction="#clearStudent" prefHeight="48.0" prefWidth="83.0" text="Clear boxes" />
   </children>
</AnchorPane>
